import { json } from '../utils/response.js';
import { getPool } from '../pool/getPool.js';   // assuming this is your series pool function

export async function handleCatalogSeries(request, env) {
  const url = new URL(request.url);

  // Use 'search' param as cursor (offset)
  const searchParam = url.searchParams.get('search') || '0';
  const offset = parseInt(searchParam, 10);
  const limit = 21;  // extra one for hasMore detection

  // Get the stable, cached pool of series
  const items = await getPool('series', env);

  if (offset >= items.length) {
    return json({
      metas: [],
      hasMore: false
    });
  }

  const slice = items.slice(offset, offset + limit);

  const metas = slice.slice(0, limit - 1).map((item, index) => ({
    id: `streamindia:series:${offset + index}`,
    type: 'series',
    name: item.title || item.name || 'Untitled',
    poster: item.poster || null,
    // Optional future fields
    // background: item.backdrop,
    // logo: item.logo,
  }));

  return json({
    metas,
    hasMore: slice.length === limit
  });
}